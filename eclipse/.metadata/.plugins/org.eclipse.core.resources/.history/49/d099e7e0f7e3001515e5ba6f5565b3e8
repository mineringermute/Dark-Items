package com.mineringermute.darkItems.BlocksItems.Blocks.material;

import com.mineringermute.darkItems.darkItems;

import net.minecraft.block.Block;
import net.minecraft.block.material.Material;
import net.minecraft.creativetab.CreativeTabs;

public class darkSteelMaterial extends Block {

	protected darkSteelMaterial(String unlocalizedName, Material material) {
		super(material);
		this.setBlockName(unlocalizedName);
        this.setBlockTextureName(darkItems.MODID + ":" + unlocalizedName);
        this.setCreativeTab(CreativeTabs.tabBlock);
        this.setHardness(2.0F);
        this.setResistance(6.0F);
        this.setLightLevel(1.0F);
        this.setHarvestLevel("pickaxe", 3);
        this.setStepSound(soundTypeMetal);
	}

}